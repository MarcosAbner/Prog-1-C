
#include<stdio.h>
#include<stdlib.h>

int main()
{
	int i, valor, soma=0;
	
	printf("Insira um valor:\n");
	scanf("%d", &valor);
	printf("====================================\n");
	
	//for(i=0; i<valor; i++)
	i=1;
	while(i<=valor)
	{
	    
	soma=soma+i;    
	if(i==valor)
	    printf("%d = ", i);
	else
		printf("%d + ", i);
	i++;
	}
	printf("\n");
	printf("%d\n", soma);	
}

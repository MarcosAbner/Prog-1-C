#include <stdio.h>

int main()
{
    float notaf;
    char disc;
    
    printf("escreva a disciplina e a nota Final\n");
    scanf("%c %f", &disc, &notaf);
    
    if(notaf > 0 && notaf <= 10)
    {
    
        if(notaf >= 5 && notaf <= 10)
        {
            printf("Voce esta aprovado! sua nota e de: %.2f na materia: %c \n", notaf, disc);
        }
        else 
            if(notaf == 4 || notaf == 4.5)
            {
            printf("Voce esta de Segunda epoca! sua nota e de: %.2f na materia: %c \n", notaf, disc);
            }
            else
                {
                printf("Voce esta reprovado! sua nota e de: %.2f na materia: %c \n", notaf, disc);
                }
    }
    else {
    printf("Sua nota e invalida");
    } 
        
    
    
    return 0;
}
